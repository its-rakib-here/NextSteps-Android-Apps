<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/projectaskitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Task Title -->
        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A brief description of the task goes here."
            android:textColor="#757575"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="4dp" />

        <!-- Distributed By -->
        <TextView
            android:id="@+id/tvTaskDistributedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distributed by: John Doe"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Row for Status and Deadline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Task Status -->
            <TextView
                android:id="@+id/tvTaskStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#FF6F00"
                android:textSize="14sp"
                android:background="@drawable/status_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Deadline -->
            <TextView
                android:id="@+id/tvTaskDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Due: 2025-01-25"
                android:textColor="#424242"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

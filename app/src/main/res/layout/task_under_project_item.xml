<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Task Title -->
        <TextView
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Start Time -->
        <TextView
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time: 09:00 AM"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <!-- End Time -->
        <TextView
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time: 05:00 PM"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="4dp" />

        <!-- Distribute Task To -->
        <TextView
            android:id="@+id/distribute_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assigned To: John Doe (Optional)"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="12dp" />

        <!-- Buttons (Delete, Update, Mark as Complete) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:weightSum="3">

            <!-- Delete Task Button -->
            <Button
                android:id="@+id/delete_task_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E53935"
                android:text="Delete"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Update Task Button -->
            <Button
                android:id="@+id/update_task_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#2196F3"
                android:text="Update"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Mark as Complete Button -->
            <Button
                android:id="@+id/mark_as_complete_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Mark as Complete"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected State -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#1A73E8" /> <!-- Fill color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#005CB2" /> <!-- Border -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Default fill color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Default border -->
        </shape>
    </item>

</selector>
